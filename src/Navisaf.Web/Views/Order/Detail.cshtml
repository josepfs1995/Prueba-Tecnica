@model Navisaf.Application.Features.Orders.Queries.OrderByIdDto
@{
    var test = Model.ProductName;
}
<div class="container">
    <div class="row" method="post" id="formOrder">
        <div class="mb-3">
            <label class="form-label">Producto</label>
            <input type="text" class="form-control disabled" asp-for="ProductName" disabled="disabled">
        </div>
        <div class="mb-3">
            <label class="form-label">Cantidad</label>
            <input type="number" class="form-control disabled" asp-for="Quantity" disabled="disabled">
        </div>
        <div class="mb-3">
            <label class="form-label">Fecha</label>
            <input type="text" class="form-control disabled" asp-for="OrderDate" disabled="disabled">
        </div>
        <div class="mb-3">
            <label class="form-label">Cliente</label>
            <input type="text" class="form-control disabled" asp-for="CustomerName" disabled="disabled">
        </div>
        <div class="mb-3">
            <label class="form-label">Origen Coords</label>
            <input type="text" class="form-control disabled" asp-for="Origin" disabled="disabled">
        </div>
        <div class="mb-3">
            <label class="form-label">Destination Coords</label>
            <input type="text" class="form-control disabled" asp-for="Destination"  disabled="disabled">
        </div>
        <div class="mb-3">
            <label class="form-label">Kilometros</label>
            <input type="text" class="form-control disabled" asp-for="DistanceKilometers"  disabled="disabled">
        </div>
        <div class="mb-3">
            <label class="form-label">Precio</label>
            <input type="text" class="form-control disabled" asp-for="Price"  disabled="disabled">
        </div>
        <div class="mb-3">
            <a  asp-action="Index" class="btn btn-primary">Retroceder</a>
        </div>
    </div>
</div>