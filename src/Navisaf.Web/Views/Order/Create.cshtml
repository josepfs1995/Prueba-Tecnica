@using Navisaf.Application.Features.Products.Queries
@model Navisaf.Application.Features.Orders.Command.CreateOrderCommand
@{
    var products = ViewBag.Products as IEnumerable<ProductDto>;
    var selectListItem = new SelectList(products, "Id", "Name");
}

<div class="container">
    <form class="row" method="post" id="formOrder">
        <div class="mb-3">
            <label class="form-label">Producto</label>
            <select asp-items="selectListItem" class="form-select" asp-for="ProductId">
                <option value="">Seleccionar</option>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Cantidad</label>
            <input type="number" class="form-control" asp-for="Quantity" min="1" step="1">
        </div>
        <div class="mb-3">
            <label class="form-label">Fecha</label>
            <input type="date" class="form-control" asp-for="OrderDate">
        </div>
        <div class="mb-3">
            <label class="form-label">Cliente</label>
            <input type="text" class="form-control" asp-for="CustomerName">
        </div>
        <div class="mb-3">
            <label class="form-label">Origen Coords</label>
            <!-- Por motivo de facilidad se agrega valores por defecto, en un caso real se obtendría de google maps -->
            <select class="form-control" asp-for="OriginCoords">
                <option value="">Seleccionar</option>
                <option value="-12.0884879,-76.9040324">Lima, Peru</option>
                <option value="-12.046374,-77.042793">Lima Centro, Peru</option>
                <option value="-12.046374,-77.042793">Miraflores, Peru</option>
                <option value="-5.1945,-80.6328">Piura, Peru</option>
                <option value="6.2442,-75.5812">Medellin, Colombia</option>
                <option value="4.6097,-74.0817">Bogota, Colombia</option>
                <option value="39.9042,116.4074">Beijing, China</option>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Destination Coords</label>
            <select class="form-control" asp-for="DestinationCoords">
                <option value="">Seleccionar</option>
                <option value="-12.0884879,-76.9040324">Lima, Peru</option>
                <option value="-12.046374,-77.042793">Lima Centro, Peru</option>
                <option value="-12.046374,-77.042793">Miraflores, Peru</option>
                <option value="-5.1945,-80.6328">Piura, Peru</option>
                <option value="6.2442,-75.5812">Medellin, Colombia</option>
                <option value="4.6097,-74.0817">Bogota, Colombia</option>
                <option value="39.9042,116.4074">Beijing, China</option>
            </select>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Crear Orden</button>
        </div>
    </form>
</div>

@section Scripts {
    <script type="module">
        // Importing a module script
        import {createOrder} from '/js/modules/order.js';
        // Example of a simple script to enhance the page
        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('formOrder').addEventListener('submit', createOrder);
        });
    </script>
}